<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="rally-check-customer-cart" template="Rally_Checkout::cart-status.phtml" ifconfig="rally_checkout/general/enabled">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Rally\Checkout\ViewModel\CheckoutConfig</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
