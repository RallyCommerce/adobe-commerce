<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.cart.methods">
            <block class="Magento\Checkout\Block\Onepage\Link" name="rally.native.checkout.button" template="Rally_Checkout::onepage/link.phtml" ifconfig="rally_checkout/general/enabled" />
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="rally-checkout-data" template="Rally_Checkout::checkout-data.phtml" ifconfig="rally_checkout/general/enabled" />
        </referenceContainer>
    </body>
</page>
